<p id="notice"><%= notice %></p>

<h1>Recipes</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>User</th>
      <th>Ingredient</th>
      <th>Pic url</th>
      <th>Ingred items</th>
      <th>Directions</th>
      <th>Cooked</th>
      <th>Favorite</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= recipe.title %></td>
        <td><%= recipe.user_id %></td>
        <td><%= recipe.ingredient_id %></td>
        <td><%= recipe.pic_url %></td>
        <td><%= recipe.ingred_items %></td>
        <td><%= recipe.directions %></td>
        <td><%= recipe.cooked %></td>
        <td><%= recipe.favorite %></td>
        <td><%= link_to 'Show', recipe %></td>
        <td><%= link_to 'Edit', edit_recipe_path(recipe) %></td>
        <td><%= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Recipe', new_recipe_path %>
